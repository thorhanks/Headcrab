{
	"name": "eJira",
	"version": "1.5",
	"manifest_version": 2,
	"author": "Thor Hanks, hIpPy",
	"description": "Various helpers for software devs attached into Jira.",

	"permissions":
	[
		"storage",
		"clipboardWrite",
		"*://*/*"
	],

	"icons":
	{
		"16": "Logo_16x16.png",
		"48": "Logo_48x48.png",
		"128": "Logo_128x128.png"
	},

	"content_scripts": [{ "matches": ["*://*/*"], "css": ["content.css"], "js": ["content.js"] }]
}
